{
  "name": "serto-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "format": "prettier --config prettier.json --write \"./src/**/*.{jsx,ts,tsx}\" && git status",
    "coverage": "jest --coverage",
    "package-android": "mkdir -p android/app/build/jsbundle/assets/ && mkdir -p android/app/build/jsbundle/res && node node_modules/react-native/local-cli/cli.js bundle --platform android --dev false --entry-file index.js --bundle-output android/app/build/jsbundle/assets/index.android.bundle --assets-dest android/app/build/jsbundle/res",
    "codepush-production": "npm run codepush-ios-production && npm run codepush-android-production",
    "codepush-ios-production": "ENVFILE=.env.production appcenter codepush release-react --private-key-path ./codepush-privatekey.pem -a Serto/Serto -d Production --plist-file ios/Serto/Info.plist",
    "codepush-android-production": "ENVFILE=.env.production appcenter codepush release-react -a Serto/Serto-Android -d Production --private-key-path ./codepush-privatekey.pem",
    "codepush-staging": "npm run codepush-ios-staging && npm run codepush-android-staging",
    "codepush-ios-staging": "ENVFILE=.env.production appcenter codepush release-react -a Serto/Serto -d Staging --private-key-path ./codepush-privatekey.pem --plist-file ios/Serto/Info.plist",
    "codepush-android-staging": "ENVFILE=.env.production appcenter codepush release-react -a Serto/Serto-Android -d Staging --private-key-path ./codepush-privatekey.pem"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link": "^1.2.11",
    "apollo-link-error": "^1.1.10",
    "apollo-link-http": "^1.5.14",
    "apollo-link-logger": "^1.2.3",
    "appcenter": "^1.13.0",
    "appcenter-analytics": "^1.13.0",
    "appcenter-crashes": "^1.13.0",
    "graphql": "^14.3.0",
    "graphql-tag": "^2.10.1",
    "jest-junit": "^6.3.0",
    "moment": "^2.24.0",
    "react": "16.8.3",
    "react-apollo": "^2.5.5",
    "react-native": "^0.59.6",
    "react-native-code-push": "^5.6.0",
    "react-native-config": "^0.11.7",
    "react-native-gesture-handler": "^1.2.1",
    "react-navigation": "^3.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.13",
    "@types/react-native": "^0.57.46",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.7.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-html-reporter": "^2.5.0",
    "jest-static-stubs": "^0.0.1",
    "metro-react-native-babel-preset": "^0.53.1",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "react-dom": "^16.8.6",
    "react-native-typescript-transformer": "^1.2.12",
    "react-test-renderer": "16.8.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "jsxBracketSameLine": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": true,
    "semicolons": false
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "android.js",
      "ios.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js|jsx)"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "reporters": [
      "default",
      "jest-junit",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "./test-reports/jest-report.html"
        }
      ]
    ]
  },
  "jest-junit": {
    "outputDirectory": "./test-results/jest/",
    "outputName": "results.xml"
  }
}
